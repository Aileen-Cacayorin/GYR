<div class="container">
  <h1>
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <%= @student.first_name %> <%= @student.last_name %>'s History
      </div>
      <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 pull-right">
        <span class="color" id="green">
          <%=@student.reports.where(color: "green").count%>
        </span>
        <span class="color" id="yellow">
         <%=@student.reports.where(color: "yellow").count%>
        </span>
        <span class="color" id="red">
          <%=@student.reports.where(color: "red").count%>
        </span>
      </div>
      <div class="clearfix"></div>
    </div>
  </h1>
  <br>
  <% @reports.each do |report| %>
    <div class="container well">
      <h4><%= report.date.strftime("%A, %B %y") %></h4>
      <% unless report.comments.nil? %>
        <h5>Comments</h5>
        <div class="panel panel-default col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <div class="panel-body">
            <p><%= report.comments %></p>
          </div>
        </div>
      <% end %>
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 <%= report.color %>">
      </div>
    </div>
  <% end %>
</div>
