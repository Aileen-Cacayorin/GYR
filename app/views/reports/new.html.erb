<div class="container">
  <div class="container well">
    <h1>Report for <%= Date.today %></h1>

    <%= form_tag "/reports" do %>
      <div class="form-group">
        <%= label_tag 'report[][daily_summary]', "Daily Summary" %>
        <%= text_area_tag "report[][daily_summary]", nil, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'report[][homework]', "Homework" %>
        <%= text_area_tag "report[][homework]", nil, class: "form-control" %>
      </div>
      <hr>
      <% @teacher.students.each do |student| %>
        <h4><%= student.first_name %></h4>
        <div class="col-lg-12">
          <div class="form-group col-lg-4 col-md-4">
            <%= radio_button_tag "#{student.id}[][color]", "green" %>
            <%= radio_button_tag "#{student.id}[][color]", "yellow" %>
            <%= radio_button_tag "#{student.id}[][color]", "red" %>
          </div>
          <div class="form-group col-lg-4 col-md-4">
            <%= radio_button_tag "#{student.id}[][status]", "tardy" %>
            <%= radio_button_tag "#{student.id}[][status]", "absent" %>
          </div>
          <div class="form-group col-lg-4 col-md-4">
            <%= label_tag '#{student.id}[][comment]', "Comment" %>
            <%= text_area_tag "#{student.id}[][comment]", nil, class: "form-control" %>
          </div>
          <hr>
        </div>
      <% end %>
      <%= submit_tag "Submit" %>
    <% end %>
  </div>
</div>
