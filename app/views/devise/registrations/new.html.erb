<div class="container">
  <div class="signup-box">
    <div class="logo text-center">
      <%= image_tag('logo_name.png') %>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-xs-3">
          <%= f.label :first_name %>
        </div>
        <div class="col-xs-9">
          <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-3">
          <%= f.label :last_name %>
        </div>
        <div class="col-xs-9">
          <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-3">
          <%= f.label :email %>
        </div>
        <div class="col-xs-9">
          <%= f.text_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-3">
          <%= f.label :password %>
        </div>
        <div class="col-xs-9">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-3">
          <%= f.label :password_confirmation %>
        </div>
        <div class="col-xs-9">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>


      <div class="row">
        <div class="col-xs-3">
        </div>
        <div class="actions col-xs-9">
          <%= f.submit "Sign up", class: "form-control" %>
        </div>
      </div>

      <br>

      <div class="col-xs-3">
      </div>
      <div class="col-xs-9 text-center">
        <%= render "devise/shared/links" %>
      </div>

    <% end %>
  </div>
</div>
